@model List<JourneyIndexModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Journey List</title>
    <link rel="stylesheet" href="~/css/journey.css" />
</head>
<body>
    <div class="container">
        <button onclick="window.location.href='@Url.Action("Index", "Home")'">←</button>
        <h1>@ViewBag.Origin - @ViewBag.Destination</h1>
        <h2>@ViewBag.DepartureDate</h2>
        @foreach (var journey in Model)
        {
            <div class="journey-card">
                <div class="time-price">
                    <span class="departure">@journey.DepartureTime</span> →
                    <span class="arrival">@journey.ArrivalTime</span>
                    <span class="price">@journey.Price.ToString("C")</span>
                </div>
                <div class="locations">
                    <span>@journey.Origin</span> - <span>@journey.Destination</span>
                </div>
            </div>
        }
    </div>
</body>
</html>


